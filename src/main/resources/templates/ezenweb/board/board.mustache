{{>ezenweb/header}}
    <div class="container">
        <!-- 상단 부분 -->
        <!-- 페이지 당 게시물수 버튼 , 글쓰기 버튼  -->
        <div class="boardTopEtc">
            <div>
                <select class="boardBtn pageBoardSize" onchange="onPageBoardSize( this )">
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                </select>
                전체 페이지수 : <span class="totalPage"></span>
                전체 게시물수 : <span class="totalBoardSize"></span>
            </div>
            <a href="/board/write" class="boardBtn">글쓰기</a>
        </div>

        <!-- 카테고리  -->
        <div class="boardCategoryBox">
            <button class="boardBtn categoryActive" onclick="onBcno(0)" type="button">전체보기</button>
            <button class="boardBtn" onclick="onBcno(1)" type="button">자유</button>
            <button class="boardBtn" onclick="onBcno(2)" type="button">노하우</button>
        </div>

        <!-- 검색 창 -->
        <div class="boardSearchBox">
            <select class="boardBtn key">    <!-- 검색 key : SQL 검색시 사용할 필드명  -->
                <option value="b.btitle">제목</option>
                <option value="b.content">내용</option>
                <option value="m.id" >작성자</option>
            </select>
            <input type="text"  class="keyword" />   <!-- 검색 keyword : SQL 검색시 사용할 필드의 값  -->
            <button class="boardBtn" type="button" onclick="onSearch()">검색</button>
        </div>

        <!-- 테이블 -->
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col"  style="width:5%"; >번호</th>
                    <th scope="col"  style="width:60%"; >제목</th>
                    <th scope="col"  style="width:15%"; >작성자</th>
                    <th scope="col"  style="width:15%"; >작성일</th>
                    <th scope="col"  style="width:5%"; >조회수</th>
                </tr>
            </thead>
            <tbody id="boardTableBody">
                <!-- JS가 행을 넣어주는 위치 -->
            </tbody>
        </table>

        <!-- 페이지네이션 -->
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <!-- JS가 페이지버튼을 넣어주는 위치 -->
            </ul>
        </nav>
    </div>
    <script src="/js/board/board.js"></script>
{{>ezenweb/footer}}